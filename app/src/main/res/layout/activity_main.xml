<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.gallusawa.androidthreads.MainActivity">

    <TextView

        android:layout_gravity="center"
        android:id="@+id/Async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvTesting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvTesting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAsyntask"
        android:text="SyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"
        />

    <Button
        android:id="@+id/btnthreads"
        android:text="THREADS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"
         />
    <Button
        android:id="@+id/btnrunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUNNABLE"
        android:onClick="executeThreads"/>
</LinearLayout>
